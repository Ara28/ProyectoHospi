<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7BAE70"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="-88dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginTop="35sp"
                android:text="Hospitales"
                android:textColor="#292828"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnHosAmericas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#48C3D6B0"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:text="Hospital las americas" />

            <Button
                android:id="@+id/btnHosVivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#48C3D6B0"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:text="Hospital Vivo" />

            <Button
                android:id="@+id/btnHosAngeles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#48C3D6B0"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:text="Hospital Los Angeles" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>